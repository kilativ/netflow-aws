    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run run-jobs",
            "name": "Jobs",
            "request": "launch",
            "type": "node-terminal"
        },
       
        {
            "type": "node",
            "request": "launch",
            "name": "Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server/src/server.ts",
            "preLaunchTask": "tsc: build - server/tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/server/dist/**/*.js"
            ]
        }
    ]
}