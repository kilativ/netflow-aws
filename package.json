{
  "name": "netflow",
  "version": "0.0.1",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "build": "npm run build-ts && npm run copy-assets",
    "build-ts": "tsc",
    "copy-assets": "ts-node copyAssets.ts",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TSC,Assets,Node\" -c \"cyan.bold,yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-assets\" \"npm run watch-node\"",
    "watch-assets": "nodemon --watch src/views -e ejs,css --exec npm run copy-assets",
    "watch-node": "nodemon dist/server.js",
    "watch-ts": "tsc -w"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "moment": "^2.29.0",
    "plaid": "^7.1.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.8",
    "@types/moment": "^2.13.0",
    "@types/node": "^14.11.2",
    "@types/shelljs": "^0.8.8",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "shelljs": "^0.8.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
